@model Student_Naloga

@{
    ViewData["Title"] = "Pregled Oddane Naloge";
}
<h2>Domaca naloga: @ViewBag.NaslovNaloge</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <div style="margin-bottom: 5px;">
            <a style="font-weight:bold;">Ime in priimek studenta: </a><br />
            <a>@ViewBag.ImeStudenta</a>
            <a>@ViewBag.PriimekStudenta</a>
        </div>
        <form asp-action="OddanaNalogaUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student_NalogaID" />
            <input type="hidden" asp-for="Student_ID" />
            <input type="hidden" asp-for="Naloga_ID" />
            <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" class="form-control" min="1" max="10"/>
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PregledOddaj">Nazaj na oddane naloge</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
