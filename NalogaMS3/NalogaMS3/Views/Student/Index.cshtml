@model IEnumerable<NalogaMS3.Models.Student>

@{
    ViewData["Title"] = "Študenti";
}

<h1>Študenti</h1>

<p>
    <a asp-action="Create">Dodaj študenta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priimek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priimek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Student_ID">Urejanje</a> |
                <a asp-action="Details" asp-route-id="@item.Student_ID">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.Student_ID">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
